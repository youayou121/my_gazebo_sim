<robot name="mycar">
    <link name="base_footprint">
        <visual>
            <geometry>
                <sphere radius="0.001"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>
    </link>
    <joint name="base2footprint" type="continuous">
       <parent link="base_footprint"/>
       <child link="base_link"/>
       <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
       <axis xyz="0 0 1"/>
    </joint>
    <link name="base_link">
        <visual>
            <!-- 形状 -->
            <geometry>
                <box size="0.5 0.2 0.1"/>
                <!-- <mesh filename="package://<packagename>/<path>/文件"-->
            </geometry>
             <!-- 颜色 -->
             <material name="mycar_color">
                <color rgba="0.0 1.0 1.0 0.8"/>
             </material>
        </visual>  
    </link>
    <link name="camera">
        <visual>
            <geometry>
                <box size="0.02 0.1 0.05"/>
            </geometry>
            <material name="camera_color">
                <color rgba="0.0 0.0 1.0 0.8"/>
            </material>
        </visual>
    </link>
    <joint name="camera2base" type = "continuous">
        <parent link="base_link"/>
        <child link="camera"/>
        <origin xyz="0.2 0.0 0.075" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 0 1"/>
        
    </joint>
</robot>